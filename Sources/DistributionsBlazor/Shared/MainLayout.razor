@using MudBlazor.Utilities
@inherits LayoutComponentBase

<MudThemeProvider Theme="theme" />
<MudDialogProvider/>
<MudSnackbarProvider/>

<PageTitle>Distribution Propagation</PageTitle>

<MudLayout>
    <MudAppBar Color="Color.Primary">
        <MudButton Variant="Variant.Text" Class="shades-text text-white" Href="/DoctorMarvin/">
            <MudText Typo="Typo.h6">Distribution Propagation</MudText>
        </MudButton>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/DoctorMarvin21/RandomAlgebra" />
        <MudIconButton Icon="@Icons.Material.Filled.QuestionMark" Color="Color.Inherit" Href="/DoctorMarvin/help" />
    </MudAppBar>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    MudTheme theme = new MudTheme
    {
        Palette = new Palette
        {
            Primary = new MudColor("#1976d2")
        }
    };
}