<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=netstandard">
  <Styles.Resources>
    <Color x:Key="AccentColor1">#637aad</Color>
    <Color x:Key="AccentColor2">#5972a7</Color>
    <Color x:Key="AccentColor3">#314179</Color>
    <Color x:Key="ForegroundColor">White</Color>
    <Color x:Key="BackgroundColor">#ededed</Color>
    <Color x:Key="GrayColor">#ededed</Color>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="ColorAccent3Brush" Color="{StaticResource AccentColor3}" />
    <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource AccentColor1}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <LinearGradientBrush x:Key="AccentLinearGradientBrush" StartPoint="100%,0%" EndPoint="100%,100%">
      <GradientStop Offset="0" Color="{StaticResource AccentColor1}" />
      <GradientStop Offset="1" Color="{StaticResource AccentColor2}" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="AccentLinearGradientBrushInverted" StartPoint="100%,0%" EndPoint="100%,100%">
      <GradientStop Offset="0" Color="{StaticResource AccentColor2}" />
      <GradientStop Offset="1" Color="{StaticResource AccentColor1}" />
    </LinearGradientBrush>
  </Styles.Resources>
</Styles>