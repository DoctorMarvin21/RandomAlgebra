<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StyleInclude Source="/Resources/Colors.xaml" />
    <Style Selector="Button">
        <Setter Property="Background" Value="{StaticResource AccentLinearGradientBrush}" />
        <Setter Property="Height" Value="30" />
        <Setter Property="BorderBrush" Value="{StaticResource ColorAccent3Brush}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource HeaderColorBrush}" />
    </Style>
    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="{StaticResource AccentLinearGradientBrushInverted}" />
    </Style>
    <Style Selector="Border.rounded">
        <Setter Property="BorderBrush" Value="#8c8c8c" />
        <Setter Property="CornerRadius" Value="1" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Margin" Value="2" />
    </Style>
    <Style Selector="Button:pointerover/template/ContentPresenter">
        <Setter Property="BorderBrush" Value="{StaticResource ColorAccent3Brush}" />
    </Style>
    <Style Selector="Button/template/ContentPresenter">
        <Setter Property="CornerRadius" Value="1" />
    </Style>
    <Style Selector="CheckBox">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
    </Style>
</Styles>