<controls:BaseMetroDialog x:Class="DistributionsWpf.DistributionEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="{Binding ExpressionArgument.SettingsType.Name}" 
        Height="Auto"
        Width="400">
    <Grid>
        <ItemsControl ItemsSource="{Binding ExpressionArgument.DistributionSettingsBindings}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBox Text="{Binding Value}" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
    <controls:BaseMetroDialog.DialogBottom>
        <Button Content="OK"
                IsDefault="True"
                HorizontalAlignment="Right"
                Width="100"
                Margin="5"
                Style="{StaticResource MahApps.Styles.Button.Dialogs}"
                Click="OkClick" />
    </controls:BaseMetroDialog.DialogBottom>
</controls:BaseMetroDialog>
